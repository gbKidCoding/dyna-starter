{
  "title": "项目申请",
  "type": "create",
  "data": "tbl_project",
  "name": "applyVerifyForm",
  "process": {
    "name": "My process",
    "output": {
      "pass": {
        "value": "#form['$approve']=='同意'?1:0"
      },
      "departmentList": [
        "test",
        "test1"
      ]
    },
    "complete": {
      "value": "#form['project']!=null"
    }
  },
  "fields": [
    {
      "name": "project",
      "type": "text",
      "label": "项目名称",
      "attributes": {
        "class": "form-control"
      }
    },
    {
      "name": "procjectCode",
      "type": "text",
      "label": "项目编码",
      "attributes": {
        "class": "form-control"
      }
    },
    {
      "name": "$approve",
      "type": "select",
      "label": "审批意见",
      "attributes": {
        "class": "form-control"
      },
      "option": {
        "values": {
          "同意": "同意",
          "不同意": "不同意"
        }
      },
      "join": {
        "table": "tbl_task_log",
        "column": "businessId",
        "field": "approve",
        "bindTask": true
      }
    },
    {
      "name": "$remarks",
      "type": "textarea",
      "label": "评论",
      "attributes": {
        "class": "form-control"
      },
      "join": {
        "table": "tbl_task_log",
        "column": "businessId",
        "field": "remarks",
        "bindTask": true
      }
    }
  ],
  "permission": [],
  "subview": [
    {
      "name": "approveHistorySubview",
      "parameter": {
        "businessId": "_id"
      }
    }
  ],
  "actions": [
    {
      "submit": true,
      "style":"btn-primary"
    }
  ]
}