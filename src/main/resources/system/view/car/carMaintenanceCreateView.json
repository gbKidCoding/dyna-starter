{
  "name":"carMaintenanceCreateView",
  "type":"create",
  "title":"保养信息",
  "data":"tbl_car_maintenance",
  "searchview":"carMaintenanceSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "attributes":{
        "required":true
      },
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "attributes":{
        "required":true
      },
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    },
    {
      "name":"maintenanceDate",
      "label":"保养日期",
      "type":"date",
      "attributes":{
        "required":true
      },
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"保养里程数",
      "type":"number",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"nextMileage",
      "label":"下次保养里程",
      "type":"number",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"remarks",
      "label":"保养内容",
      "type":"textarea",
      "attributes":{
        "required":true,
        "maxlength":500,
        "rows":10
      }
    },
    {
      "name":"user",
      "label":"保养人",
      "type":"text",
      "attributes":{
        "required":true,
        "maxlength":100
      }
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ]
}