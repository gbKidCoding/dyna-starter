{
  "name":"carSearchView",
  "type":"search",
  "title":"车辆信息查询",
  "data":"tbl_car",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carNo",
      "label":"车牌号",
      "type":"text",
      "operator":"$like"
    }
  ],
  "actions":[
    {
      "name":"search",
      "label":"查询",
      "style":"btn-primary",
      "search":true
    },
    {
      "name":"addCar",
      "label":"新建车辆信息",
      "view":"carCreateView",
      "type":"create"
    }
  ],
  "result":[
    {
      "name":"carNo",
      "label":"车牌号",
      "attributes":{
        "data-sortable":true
      }
    },
    {
      "name":"departmentId",
      "label":"安装队",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_department",
          "column":"name"
        }
      }
    },
    {
      "name":"buyDate",
      "label":"购买日期",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"insExpDate",
      "label":"保险到期日",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"annExpDate",
      "label":"年检日期",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"里程数(km)",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"nextMileage",
      "label":"下次年检里程数",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"cardNo",
      "label":"随车油卡编号"
    }
  ],
  "operate":[
    {
      "name":"edit",
      "icon":"glyphicon-edit",
      "view":"carCreateView",
      "type":"create"
    }
  ]
}