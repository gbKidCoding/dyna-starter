{
  "name":"carUsageSearchView",
  "type":"search",
  "title":"使用查询",
  "data":"tbl_car_usage",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    }
  ],
  "actions":[
    {
      "name":"search",
      "label":"查询",
      "style":"btn-primary",
      "search":true
    },
    {
      "name":"addUsage",
      "label":"新建使用登记",
      "view":"carUsageCreateView",
      "type":"create"
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ],
  "result":[
    {
      "name":"departmentId",
      "label":"安装队",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_department",
          "column":"name"
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_car",
          "column":"carNo"
        }
      }
    },
    {
      "name":"startDate",
      "label":"借用时间",
      "converter":{
        "provider":"dateConverter",
        "parameter":{
          "format":"yyyy-MM-dd HH:mm"
        }
      }
    },
    {
      "name":"user",
      "label":"驾驶人"
    },
    {
      "name":"endDate",
      "label":"还车时间",
      "converter":{
        "provider":"dateConverter",
        "parameter":{
          "format":"yyyy-MM-dd HH:mm"
        }
      }
    },
    {
      "name":"destination",
      "label":"目的地、用途"
    }
  ],
  "operate":[
    {
      "name":"edit",
      "icon":"glyphicon-edit",
      "view":"carUsageCreateView",
      "type":"create"
    }
  ]
}