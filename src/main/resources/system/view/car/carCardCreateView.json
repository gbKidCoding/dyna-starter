{
  "name":"carCardCreateView",
  "type":"create",
  "title":"充值申请",
  "data":"tbl_car_topup",
  "defaultValue":{
    "status":"待审核"
  },
  "searchview":"carCardSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "attributes":{
        "required":true
      },
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "attributes":{
        "required":true
      },
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    },
    {
      "name":"cardNo",
      "label":"油卡编号",
      "type":"select",
      "attributes":{
        "required":true
      },
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"cardNo",
          "value":"cardNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"carId",
              "name":"_id"
            }
          ]
        }
      }
    },
    {
      "name":"amount",
      "label":"充值金额",
      "type":"number",
      "attributes":{
        "required":true
      },
      "update":false,
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"requestDate",
      "label":"申请日期",
      "type":"date",
      "attributes":{
        "required":true
      },
      "update":false,
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"requestUser",
      "label":"申请人",
      "type":"text",
      "attributes":{
        "required":true
      },
      "update":false
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true,
      "update":false
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    },
    {
      "name":"carId",
      "target":"cardNo"
    }
  ]
}