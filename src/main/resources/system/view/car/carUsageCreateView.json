{
  "name":"carUsageCreateView",
  "type":"create",
  "title":"使用登记",
  "data":"tbl_car_usage",
  "searchview":"carUsageSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    },
    {
      "name":"startDate",
      "label":"借车时间",
      "type":"date",
      "attributes":{
        "data-date-format":"yyyy-MM-dd hh:ii",
        "data-min-view":"day"
      },
      "converter":{
        "provider":"dateConverter",
        "parameter":{
          "format":"yyyy-MM-dd HH:mm"
        }
      }
    },
    {
      "name":"user",
      "label":"驾驶人",
      "type":"text"
    },
    {
      "name":"endDate",
      "label":"还车时间",
      "type":"date",
      "attributes":{
        "data-date-format":"yyyy-MM-dd hh:ii",
        "data-min-view":"day"
      },
      "converter":{
        "provider":"dateConverter",
        "parameter":{
          "format":"yyyy-MM-dd HH:mm"
        }
      }
    },
    {
      "name":"destination",
      "label":"目的地、用途",
      "type":"text"
    },
    {
      "name":"remarks",
      "label":"备注",
      "type":"textarea"
    }
  ],
  "validators":[
    {
      "field":"departmentId",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"carId",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"startDate",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"user",
      "provider":"required",
      "msg":"required"
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ]
}