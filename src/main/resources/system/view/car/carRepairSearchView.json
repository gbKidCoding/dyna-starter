{
  "name":"carRepairSearchView",
  "type":"search",
  "title":"维修查询",
  "data":"tbl_car_repair",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    }
  ],
  "actions":[
    {
      "name":"search",
      "label":"查询",
      "style":"btn-primary",
      "search":true
    },
    {
      "name":"addRepair",
      "label":"添加维修信息",
      "view":"carRepairCreateView",
      "type":"create"
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ],
  "result":[
    {
      "name":"departmentId",
      "label":"安装队",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_department",
          "column":"name"
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_car",
          "column":"carNo"
        }
      }
    },
    {
      "name":"applyDepartment",
      "label":"申请部门"
    },
    {
      "name":"applyUser",
      "label":"申请人"
    },
    {
      "name":"applyDate",
      "label":"申请日期",
      "converter":{
        "provider":"dateConverter"
      }
    }
  ],
  "operate":[
    {
      "name":"edit",
      "icon":"glyphicon-edit",
      "view":"carRepairCreateView",
      "type":"create"
    }
  ]
}