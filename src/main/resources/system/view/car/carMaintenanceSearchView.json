{
  "name":"carMaintenanceSearchView",
  "type":"search",
  "title":"保养查询",
  "data":"tbl_car_maintenance",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    }
  ],
  "actions":[
    {
      "name":"search",
      "label":"查询",
      "style":"btn-primary",
      "search":true
    },
    {
      "name":"add",
      "label":"添加保养信息",
      "view":"carMaintenanceCreateView",
      "type":"create"
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ],
  "result":[
    {
      "name":"departmentId",
      "label":"安装队",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_department",
          "column":"name"
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_car",
          "column":"carNo"
        }
      }
    },
    {
      "name":"maintenanceDate",
      "label":"保养日期",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"保养里程",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"nextMileage",
      "label":"下次保养里程",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"remarks",
      "label":"保养内容"
    },
    {
      "name":"user",
      "label":"保养人"
    }
  ],
  "operate":[
    {
      "name":"edit",
      "icon":"glyphicon-edit",
      "view":"carMaintenanceCreateView",
      "type":"create"
    }
  ]
}