{
  "name":"carMileageCreateView",
  "type":"create",
  "title":"里程信息",
  "data":"tbl_car_mileage",
  "searchview":"carMileageSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    },
    {
      "name":"logDate",
      "label":"记录日期",
      "type":"date",
      "attributes":{
        "required":true
      },
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"里程数",
      "type":"number",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"restVol",
      "label":"邮箱存量",
      "type":"number",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"0.00"
        }
      }
    },
    {
      "name":"balance",
      "label":"油卡余额",
      "type":"number",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"0.00"
        }
      }
    },
    {
      "name":"oilType",
      "label":"本月油品",
      "type":"autocomplete",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "option":{
        "values":{
          "#92":"#92",
          "#95":"#95",
          "#98":"#98"
        }
      }
    },
    {
      "name":"price",
      "label":"油品单价",
      "type":"number",
      "attributes":{
        "required":true,
        "maxlength":10
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"0.00"
        }
      }
    },
    {
      "name":"user",
      "label":"操作人",
      "type":"text",
      "attributes":{
        "required":true
      }
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ]
}