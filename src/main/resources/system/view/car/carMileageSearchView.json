{
  "name":"carMileageSearchView",
  "type":"search",
  "title":"里程查询",
  "data":"tbl_car_mileage",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    }
  ],
  "actions":[
    {
      "name":"search",
      "label":"查询",
      "style":"btn-primary",
      "search":true
    },
    {
      "name":"add",
      "label":"添加里程信息",
      "view":"carMileageCreateView",
      "type":"create"
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ],
  "result":[
    {
      "name":"departmentId",
      "label":"安装队",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_department",
          "column":"name"
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "converter":{
        "provider":"dataConverter",
        "parameter":{
          "table":"tbl_car",
          "column":"carNo"
        }
      }
    },
    {
      "name":"logDate",
      "label":"记录日期",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"里程数",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"restVol",
      "label":"油箱存量",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"balance",
      "label":"油卡余额",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"0.00"
        }
      }
    },
    {
      "name":"oilType",
      "label":"本月油品"
    },
    {
      "name":"price",
      "label":"油品单价",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"0.00"
        }
      }
    },
    {
      "name":"user",
      "label":"操作员"
    }
  ],
  "operate":[
    {
      "name":"edit",
      "icon":"glyphicon-edit",
      "view":"carMileageCreateView",
      "type":"create"
    }
  ]
}