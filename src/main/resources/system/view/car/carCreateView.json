{
  "name":"carCreateView",
  "type":"create",
  "title":"车辆信息",
  "data":"tbl_car",
  "searchview":"carSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carNo",
      "label":"车牌号码",
      "type":"text"
    },
    {
      "name":"buyDate",
      "label":"购买日期",
      "type":"date",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"insExpDate",
      "label":"保险到期日期",
      "type":"date",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"annExpDate",
      "label":"年检到期日",
      "type":"date",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"mileage",
      "label":"里程数",
      "type":"number",
      "attributes":{
        "required":true
      },
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"nextMileage",
      "label":"下次保养里程",
      "type":"number",
      "converter":{
        "provider":"numberConverter",
        "parameter":{
          "format":"#"
        }
      }
    },
    {
      "name":"cardNo",
      "label":"随车油卡编号",
      "type":"text"
    }
  ],
  "validators":[
    {
      "field":"departmentId",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"carNo",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"carNo",
      "provider":"unique",
      "msg":"unique"
    },
    {
      "field":"carNo",
      "provider":"length",
      "msg":"length",
      "parameter":{
        "max":10
      }
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ]
}