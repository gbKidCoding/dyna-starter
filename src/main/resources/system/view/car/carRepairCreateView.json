{
  "name":"carRepairCreateView",
  "type":"create",
  "title":"维修信息",
  "data":"tbl_car_repair",
  "searchview":"carRepairSearchView",
  "fields":[
    {
      "name":"departmentId",
      "label":"安装队",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_department"
          }
        }
      }
    },
    {
      "name":"carId",
      "label":"车牌号",
      "type":"select",
      "update":false,
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"carNo",
          "query":{
            "_data":"tbl_car"
          },
          "depends":[
            {
              "depend":"departmentId",
              "name":"departmentId"
            }
          ]
        }
      }
    },
    {
      "name":"applyDepartment",
      "label":"申请部门",
      "type":"text"
    },
    {
      "name":"applyUser",
      "label":"申请人",
      "type":"text"
    },
    {
      "name":"applyDate",
      "label":"申请日期",
      "type":"date",
      "converter":{
        "provider":"dateConverter"
      }
    },
    {
      "name":"reason",
      "label":"送修原因",
      "type":"textarea",
      "attributes":{
        "required":true,
        "maxlength":100
      }
    }
  ],
  "validators":[
    {
      "field":"departmentId",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"carId",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"applyDepartment",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"applyUser",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"applyDate",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"reason",
      "provider":"required",
      "msg":"required"
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ],
  "change":[
    {
      "name":"departmentId",
      "target":"carId"
    }
  ]
}