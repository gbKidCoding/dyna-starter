{
  "name":"codeCreateView",
  "type":"create",
  "title":"字典查询",
  "data":"tbl_code",
  "permission":["系统配置"],
  "searchview":"codeSearchView",
  "fields":[
    {
      "name":"code",
      "label":"字典Key",
      "type":"text",
      "attributes":{
        "required":true,
        "maxlength":20
      }
    },
    {
      "name":"codetype",
      "label":"字典类型",
      "type":"select",
      "option":{
        "provider":"defaultOptionProvider",
        "parameter":{
          "key":"_id",
          "value":"name",
          "query":{
            "_data":"tbl_code_type"
          }
        }
      }
    },
    {
      "name":"desc",
      "label":"字典描述",
      "type":"text",
      "attributes":{
        "required":true,
        "maxlength":50
      }
    },
    {
      "name":"active",
      "label":"是否可用",
      "type":"select",
      "default":false,
      "option":{
        "values":{
          "A":"可用",
          "I":"不可用"
        }
      }
    }
  ],
  "validators":[
    {
      "field":"active",
      "provider":"required",
      "msg":"required"
    },
    {
      "field":"codetype",
      "provider":"required",
      "msg":"required"
    }
  ],
  "actions":[
    {
      "name":"submit",
      "label":"提交",
      "style":"btn-primary",
      "submit":true
    },
    {
      "name":"back",
      "label":"返回",
      "back":true
    }
  ]
}